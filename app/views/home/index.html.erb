<%= render "users/shared/nav" %>
<%= render "users/shared/carousel" %>
<div class="container" style="margin-bottom: 100px; margin-top: 15px">
  <h4>Winners Feedback!</h4>
  <div class="row row-cols-lg-5 d-flex justify-content-center">

    <% @winners.each do |winner| %>
      <%= link_to users_feedback_path(winner), class: "text-decoration-none text-dark" do %>
        <div class=" col d-flex align-self-stretch">
          <div class="card shadow  mb-5 bg-body rounded border-light mt-3 w-100" style="height: 240px">
            <div class="overflow-hidden h-100">
              <%= image_tag winner.picture.url, style: "width: 100%" %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <% if @winners.count == 4 %>
      <%= link_to users_feedbacks_path, class: "text-decoration-none text-dark" do %>
        <div class="card shadow  mb-5 bg-body rounded border-light mt-3 w-100" style="height: 79%">
          <div class="card-body">
            <div style="aspect-ratio: 1 / 1; display: flex; align-items: center; justify-content: center;">See More...
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <h4>Coming Soon!</h4>
  <div class="row row-cols-lg-5 d-flex justify-content-center">
    <% @items.each do |item| %>
      <div class=" col-md-4 col-4 d-flex align-self-stretch">
        <div class="card shadow  mb-5 bg-body rounded border-light mt-3">
          <div class="card-body d-flex flex-column">
            <div class="overflow-hidden h-100">
              <%= link_to (image_tag item.image.url, class: 'd-block w-100' if item.image?), users_lottery_path(item) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <% if @items.count == 9 %>
      <%= link_to users_lotteries_path, class: "text-decoration-none text-dark" do %>
        <div class="card shadow  mb-5 bg-body rounded border-light mt-3 w-100" style="height: 79%">
          <div class="card-body">
            <div style="aspect-ratio: 1 / 1; display: flex; align-items: center; justify-content: center;">See More...
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>