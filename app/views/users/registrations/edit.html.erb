<div class="container py-5 h-100">
  <div class="card w-100 mt-5">
    <div class="card-body bg-secondary text-white p-4">
      <div class="mb-md-3 mt-md-4 pb-1">
        <h2 class="fw-bold mb-5 text-uppercase text-center" style="color:Orange;">Edit Profile </h2>
        <%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="container">
            <%= image_tag "#{request.base_url}#{current_user.image.url}", style: "width: 120px; margin-top" if current_user.image? %>
            <div class="row">
              <div class="col">
                <div class="form-outline mb-4 text-center">
                  <%= f.file_field :image, class: "form-control form-control-lg mb-3" %>
                </div>
              </div>
              <div class="col">
                <div class="form-outline mb-4 text-center">
                  <%= f.text_field :username, class: "form-control form-control-lg mb-3", placeholder: "Username", autofocus: true, autocomplete: "username" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <div class="form-outline mb-4 text-center">
                  <%= f.text_field :phone, class: "form-control form-control-lg mb-3", placeholder: "Phone Number", autofocus: true, autocomplete: "phone" %>
                </div>
              </div>
              <div class="col">
                <div class="form-outline mb-4 text-center">
                  <%= f.email_field :email, class: "form-control form-control-lg mb-3", placeholder: "Email", autofocus: true, autocomplete: "email" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <div class="form-outline mb-4 text-center">
                  <%= f.password_field :password, class: "form-control form-control-lg mb-3", placeholder: "New Password", autocomplete: "new-password" %>
                </div>
              </div>
              <div class="col">
                <div class="form-outline mb-4 text-center">
                  <%= f.password_field :password_confirmation, class: "form-control form-control-lg mb-3", placeholder: "Confirm Password", autocomplete: "new-password" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <div class="form-outline mb-4 text-center">
                  <%= f.password_field :current_password, class: "form-control form-control-lg mb-3", placeholder: "Current Password", autocomplete: "current-password" %>
                </div>
              </div>
            </div>
          </div>
          <div class="form-outline mb-4 text-center">
            <div class="pt-1 mb-4 text-center">
              <%= f.submit "Update", class: "btn btn-outline-light btn-lg px-5" %>
            </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
  <%= render "users/shared/nav" %>

