<%= render "users/shared/nav" %>
<div class="container py-5 mt-5 h-100">
  <div class="card w-100 mt-5 shadow rounded border-light">
    <div class="card-body bg-light p-4">
      <div class="mb-md-3 mt-md-4 pb-1">
        <h2 class="fw-bold mb-3 text-uppercase text-center" style="color:Orange;">Edit Profile </h2>
        <%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="container">
            <div class="d-flex justify-content-center mb-4">
              <%= image_tag "#{request.base_url}#{current_user.image.url}", class: "shadow-sm", style: "width: 150px;" if current_user.image? %>
            </div>
            <div class="row mt-3">
              <div class="col">
                <div class="form-outline mb-4 text-center">
                  <%= f.file_field :image, class: "form-control shadow-sm" %>
                </div>
              </div>
              <div class="col">
                <div class="form-outline mb-4 text-center">
                  <%= f.text_field :username, class: "form-control shadow-sm", placeholder: "Username", autofocus: true, autocomplete: "username" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <div class="form-outline mb-4 text-center">
                  <%= f.text_field :phone, class: "form-control shadow-sm", placeholder: "Phone Number", autofocus: true, autocomplete: "phone" %>
                </div>
              </div>
              <div class="col">
                <div class="form-outline mb-4 text-center">
                  <%= f.email_field :email, class: "form-control shadow-sm", placeholder: "Email", autofocus: true, autocomplete: "email" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <div class="form-outline mb-4 text-center">
                  <%= f.password_field :password, class: "form-control shadow-sm", placeholder: "New Password", autocomplete: "new-password" %>
                </div>
              </div>
              <div class="col">
                <div class="form-outline mb-4 text-center">
                  <%= f.password_field :password_confirmation, class: "form-control shadow-sm", placeholder: "Confirm Password", autocomplete: "new-password" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <div class="form-outline mb-4 text-center">
                  <%= f.password_field :current_password, class: "form-control shadow-sm", placeholder: "Current Password", autocomplete: "current-password" %>
                </div>
              </div>
            </div>
          </div>
          <div class="form-outline mb-4 text-center">
            <div class="pt-1 mb-4 text-center">
              <%= link_to "Back", users_profile_path, class: "btn btn-warning px-5 mx-3 shadow-sm" %>
              <%= f.submit "Update", data: { confirm: 'Are you sure you want to update?' }, class: "btn btn-success px-5 mx-3 shadow-sm" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>