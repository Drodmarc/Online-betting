<%= render "users/shared/nav" %>
<div class="container text-center" style="margin-top: 150px">
  <% unless user_signed_in? %>
    <p><b> You need to sign in first.</b></p>
  <% end %>
  <div class="d-flex justify-content-center">
    <div class="card shadow  mb-5 bg-body rounded border-light">
      <div class="card-body">
        <div class="img-fluid">
          <%== @svg %>
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <div class="card shadow bg-body rounded border-light mt-2">
      <div class="card-body text-center">
        <div id="link" class="text-dark" style="font-style: oblique">
          <%= @url %>
        </div>
      </div>
    </div>
    <button onclick="copy_url()" type="button" class="btn shadow bg-warning rounded  mt-2">Copy Link</button>
  </div>
</div>
<script>
    function copy_url() {
        const range = document.createRange();
        range.selectNode(document.getElementById("link"));
        window.getSelection().removeAllRanges();
        window.getSelection().addRange(range);
        document.execCommand("copy");
        window.getSelection().removeAllRanges();
    }
</script>