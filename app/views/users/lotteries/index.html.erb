<%= render "users/shared/nav" %>
<%= render "users/shared/carousel" %>
<div class="container" style="margin-bottom: 100px; margin-top: 15px">
  <div class="mb-2">
    <%= link_to 'All', users_lotteries_path, class:"btn  shadow-sm bg-danger rounded text-light"%>
    <% @categories.each do |category| %>
      <%= link_to category.name, users_lotteries_path(category: category.name), class:"btn shadow-sm  bg-warning rounded"%>
    <% end %>
  </div>
  <div class="row row-cols-lg-5">
    <% @items.each do |item| %>
      <div class="col-4 d-flex align-self-stretch">
        <div class="card shadow  mb-5 bg-body rounded border-light mt-3">
          <div class="card-body d-flex flex-column">
            <%= image_tag item.image.url, class: 'd-block h-100' if item.image?%>
            <hr>
            <h6 class="text-start"><%= item.name %></h6>
            <div class="progress">
              <div class="progress-bar bg-warning text-black" role="progressbar" aria-label="Example with label" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

