<%= render "users/shared/nav" %>
<%= render "users/shared/carousel" %>
<div class="container" style="margin-bottom: 100px; margin-top: 50px">
  <%= render "shared/flash_error" %>
  <div class="row d-flex justify-content-center">
    <% @offers.each do |offer| %>
      <div class=" col-6 d-flex align-self-stretch">
        <div class="card shadow overflow-hidden mb-5 bg-body rounded border-light mt-3 w-100">
          <a class="w-100" data-bs-toggle="modal" data-target="#exampleModalToggle" href="#order_<%= offer.id %>" style="border: none; background: transparent;">
            <%= image_tag offer.image.url, class: 'd-block w-100 card-img-top' if offer.image? %>
          </a>
        </div>
      </div>
      <div class="modal fade" id="order_<%= offer.id %>" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-body text-center mt-4 mb-4">
              Do you want to pay â‚±<%= offer.amount %>
              and get <%= offer.coin %> coins?
            </div>
            <div class="modal-footer justify-content-center">
              <button class="btn btn-warning shadow-sm rounded px-5" data-bs-dismiss="modal">Close</button>
              <%= link_to "Order", users_offer_order_path(offer), class: "btn btn-success shadow-sm rounded px-5", method: :post %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>