<div class="container py-5 h-100">
  <div class="card bg-secondary w-100 mt-5">
    <div class="mt-md-4 ">
      <% if @address.errors.any? %>
        <% @address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
      <%= form_for @address, url: users_addresses_path, method: :post do |f| %>
        <div class="container">
          <div class="row mb-4">
            <div class="col">
              <%= link_to "Back", users_addresses_path, class: "btn btn-lg px-5 form-control", style: "background-color:orange" %>
            </div>
            <div class="col">
              <h2 class="fw-bold mb-3 text-uppercase text-center" style="color:Orange;">New Address </h2>
            </div>
          </div>
        </div>
        <div class="card w-100 mt-1 ">
          <div class="card-body bg-secondary">
            <div class="form-outline mb-1">
              <div class="row">
                <div class="col">
                  <div class="form-outline mb-4 text-center">
                    <%= f.text_field :name, class: "form-control form-control-lg mb-3", placeholder: "Full name", autofocus: true, autocomplete: "username" %>
                  </div>
                </div>
                <div class="col">
                  <div class="form-outline mb-4 text-center">
                    <%= f.text_field :phone_number, class: "form-control form-control-lg mb-3", placeholder: "Phone Number", autofocus: true, autocomplete: "phone" %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <div class="form-outline mb-4 text-center">
                    <%= f.text_field :street_address, class: "form-control form-control-lg mb-3", placeholder: "Street Address", autofocus: true, autocomplete: "phone" %>
                  </div>
                </div>
                <div class="col">
                  <div class="form-outline mb-4 text-center">
                    <%= f.select(:genre, Address.genres.keys.map { |key| [key.humanize, key] }, { include_blank: "Genre" }, { :class => "form-select form-select-lg mb-3" }) %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <div class="form-outline mb-4 text-center">
                    <%= f.collection_select :region_id, Region.order(:id), :id, :name, { include_blank: "Please Select Region" }, { class: "form-select form-select-lg mb-3" } %>
                  </div>
                </div>
                <div class="col">
                  <div class="form-outline mb-4 text-center">
                    <%= f.collection_select :province_id, Province.order(:id), :id, :name, { include_blank: "Please Select Province" }, { class: "form-select form-select-lg mb-3" } %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <div class="form-outline mb-4 text-center">
                    <%= f.collection_select :city_id, City.order(:id), :id, :name, { include_blank: "Please Select city" }, { class: "form-select form-select-lg mb-3" } %>
                  </div>
                </div>
                <div class="col">
                  <div class="form-outline mb-4 text-center">
                    <%= f.collection_select :barangay_id, Barangay.where('id<=?', 10).order(:id), :id, :name, { include_blank: "Please Select Barangay" }, { class: "form-select form-select-lg mb-3" } %>
                  </div>
                </div>
              </div>
              <%= f.text_area :remark, class: "form-control form-control-lg mb-3", :cols => 30, :rows => 2 %>
              <%= f.check_box :is_default %>
              <%= f.label :Default, class: "text-white" %>
              <div class="pt-1 mb-4 text-center">
                <%= f.submit "Create", class: "btn btn-outline-light btn-lg px-5" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render "users/shared/nav" %>
