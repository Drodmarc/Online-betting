<%= render "users/shared/nav" %>
<div class="container py-5 h-100 mt-5">
  <%= render "shared/error", resource: @address%>
  <div class="card bg-secondary w-100 mt-5 shadow  mb-5 rounded">
    <div class="mt-md-4 ">
      <%= form_for @address, url: users_addresses_path, method: :post do |f| %>
        <div class="container">
          <div class="row mb-4">
            <div class="col">
              <%= link_to "Back", users_addresses_path, class: "btn btn-lg px-5 form-control", style: "background-color:orange" %>
            </div>
            <div class="col">
              <h2 class="fw-bold mb-3 text-uppercase text-center" style="color:Orange;">New</h2>
            </div>
          </div>
        </div>
        <div class="card w-100 mt-1 ">
          <div class="card-body bg-secondary">
            <div class="form-outline mb-1">
              <%= render "form", f: f %>
              <%= f.check_box :is_default %>
              <%= f.label :Default, class: "text-white" %>
              <div class="pt-1 mb-4 text-center">
                <%= f.submit "Create", class: "btn btn-outline-light btn-lg px-5" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
