<%= render "users/shared/nav" %>
<div class="container py-5 h-100 mt-5">
  <%= render "shared/error", resource: @address%>
  <div class="card bg-light w-100 mt-5 shadow rounded border-light">
    <div class="mt-md-4 ">
      <%= form_for @address, url: users_addresses_path, method: :post do |f| %>
        <div class="container">
          <div class="row mb-4">
            <div class="col">
              <%= link_to "Back", users_addresses_path, class: "btn btn-warning px-5 form-control" %>
            </div>
            <div class="col">
              <h2 class="fw-bold mb-3 text-uppercase text-center" style="color:Orange;">New</h2>
            </div>
          </div>
        </div>
        <div class="card w-100 mt-1 border-light shadow-sm">
          <div class="card-body">
            <div class="form-outline mb-1">
              <%= render "form", f: f %>
              <%= f.check_box :is_default %>
              <%= f.label :Default %>
              <div class="pt-1 mb-4 text-center">
                <%= f.submit "Create", class: "btn btn-success px-5" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>