<%= render "users/shared/nav" %>
<div class="container py-5 h-100 mt-5">
  <%= render "shared/flash_error" %>
  <div class="card bg-light w-100 mt-5 shadow rounded border-light">
    <div class="mb-md-2 mt-md-4 pb-1">
      <div class="container">
        <div class="row p-2">
          <div class="col">
            <%= link_to "Back", users_profile_path, class: "btn btn-warning px-5 form-control shadow-sm" %>
          </div>
          <div class="col">
            <%= link_to "New", new_users_address_path, class: "btn btn-warning px-5 form-control shadow-sm" %>
          </div>
        </div>
        <% if current_user.addresses.blank? %>
          <div class="card w-100">
            <div class="card-body ">
              <p class="card-text text-black text-center">No Address to show</p>
            </div>
          </div>
        <% end %>
        <% @addresses.each do |address| %>
          <div class="card w-100 mt-3 ">
            <div class="card-body shadow-sm border-light">
              <div class="row">
                <b><%= content_tag :div, address.genre, class: "badge bg-primary" %> &nbsp; <%= content_tag :div, 'Default', class: "badge bg-danger" if address.is_default %></b>
                <p class="card-text"><b>Full name:</b> <%= address.name %></p>
                <p class="card-text"><b>Phone Number:</b> <%= address.phone_number %></p>
                <p class="card-text">
                  <b>Address:</b> <%= concat_address(address)%>
                </p>
              </div>
              <div class="container mt-2">
                <div class="row">
                  <div class="col-lg-1 col-sm-2 col-3">
                    <%= link_to "Edit", edit_users_address_path(address), class: "btn btn-sm btn-success" %>
                  </div>
                  <div class="col-lg-11 col-sm-10 col-9">
                    <%= link_to 'Delete', users_address_path(address), method: :delete, data: { confirm:'Are you sure you want to delete?' },class: "btn btn-sm btn-danger" unless address.is_default %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>