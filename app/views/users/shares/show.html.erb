<%= render "users/shared/nav" %>
<div class="container py-5 h-100 mt-5">
  <div class="card bg-light w-100 mt-5 shadow rounded border-light">
    <div class="mb-md-2 mt-md-4 pb-1">
      <div class="container">
        <h1 class="d-flex justify-content-center mt-1"><b>Share Feedback</b></h1>
        <%= render "shared/flash_error" %>
        <div class="mt-3">
          <%= form_for @winner, url: users_share_path(@winner), method: :patch do |f| %>
            <div class="card w-100 mt-2 border-light">
              <div class="card-body shadow-sm">
                <div class="row">
                  <div class=" d-flex justify-content-end ">
                    <%= f.file_field :picture, class: "form-control shadow-sm" %>
                  </div>
                  <div class="form-outline mt-3 text-center">
                    <%= f.text_area :comment, class: "form-control shadow-sm", :cols => 30, :rows => 2 %>
                  </div>
                </div>
              </div>
              <div class="d-flex justify-content-center mt-3 mb-2">
                <%= link_to " Back", users_profile_path(records: :winner), class: "btn btn-warning px-5 mx-3" %>
                <%= f.submit "Submit", data: { confirm: 'Are you sure you want to submit?' }, class: "btn btn-success px-5 mx-3" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>