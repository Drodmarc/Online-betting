<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-secondary text-white">
          <div class="card-body p-5 text-center">
            <div class="mb-md-3 mt-md-4 pb-1">
              <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                  <%= link_to "Login", new_session_path(resource_name), class: "nav-link  active text-dark", style: "background-color:darkorange" %>
                </li>
                <li class="nav-item" role="presentation">
                  <%= link_to "Register", new_user_registration_path, class: "nav-link text-white" %>
                </li>
              </ul>
              <p class="notice"><%= notice %></p>
              <p class="alert"><%= alert %></p>
              <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
                <div class="form-outline form-white mb-2">
                  <%= f.email_field :email, class: "form-control form-control-lg mb-3",  autofocus: true, autocomplete: "email" %>
                  <%= f.label :email %><br />
                </div>

                <div class="form-outline form-white mb-2">
                  <%= f.password_field :password, class: "form-control form-control-lg mb-3",  autocomplete: "current-password" %>
                  <%= f.label :password %><br />
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="field mb-5">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>

                <div class="pt-1 mb-2">
                  <%= f.submit "Login", class: "btn btn-outline-light btn-lg px-5" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render "users/shared/nav" %>

