<div class="card-body">
  <div class="input-group mb-3">
    <span class="input-group-text shadow-sm justify-content-center" style="width: 90px">Coins</span>
    <%= f.number_field :coin,  min: 1, value: 0, class: "form-control shadow-sm" %>
  </div>
  <div class="input-group">
    <span class="input-group-text shadow-sm justify-content-center" style="width: 90px">Remarks</span>
    <%= f.text_field :remarks, class: "form-control shadow-sm" %>
  </div>
  <div class="pt-1 mt-3 text-center">
    <%= link_to "Back", admin_users_path, class: "btn btn-warning px-4 mx-2" %>
    <%= f.submit "Create", data: { confirm: 'Are you sure you want to create order?' }, class: "btn btn-danger px-4 mx-2" %>
  </div>
</div>