<div class="col-6">
  <div style="margin-top: 30px">
    <h3 class="d-flex justify-content-center"><b>User Details</b></h3>
  </div>
  <div class="card shadow-sm border-light">
    <div class="card-body mt-1">
      <div class="input-group">
        <span class="input-group-text shadow-sm justify-content-center" style="width: 100px">Username</span>
        <%= text_field_tag :username, @user.username, readonly: true, class: "form-control shadow-sm" %>
      </div>
      <div class="input-group mt-3">
        <span class="input-group-text shadow-sm justify-content-center" style="width: 100px">Promoter</span>
        <%= text_field_tag :parent, @user.parent&.email, readonly: true, class: "form-control shadow-sm" %>
      </div>
      <div class="input-group mt-3">
        <span class="input-group-text shadow-sm justify-content-center" style="width: 100px">Coins</span>
        <%= text_field_tag :coins, @user.coins, readonly: true, class: "form-control shadow-sm" %>
      </div>
    </div>
  </div>
</div>