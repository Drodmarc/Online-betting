<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white">
          <div class="card-body p-5 text-center">
            <div class="mb-md-3 mt-md-4 pb-1">
              <h2 class="fw-bold mb-5 text-uppercase" style="color:darkorange"> Admin Login</h2>
              <%= form_for(resource, as: resource_name, url: new_admin_user_session_path) do |f| %>
                <div class="form-outline form-white mb-2">
                  <%= f.email_field :email, class: "form-control form-control-lg mb-3", autofocus: true, autocomplete: "email" %>
                  <%= f.label :email, class: "form-label " %>
                </div>
                <div class="form-outline form-white mb-2">
                  <%= f.password_field :password, class: "form-control form-control-lg mb-3", autocomplete: "current-password" %>
                  <%= f.label :password, class: "form-label" %>
                </div>
                <div class="pt-1 mb-2">
                  <%= f.submit "Log in", class: "btn btn-outline-light btn-lg px-5" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
