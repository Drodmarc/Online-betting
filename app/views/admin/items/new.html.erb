<%= render "layouts/adnav" %>
<div class="main mt-4">
  <div class="container">
    <h1><b>Create Item</b></h1>
    <%= render "shared/error", resource: @item %>
    <div class="card w-100 mt-3 shadow border-light">
      <div class="card-body bg-light">
        <%= form_for @item, url: admin_items_path, method: :post do |f| %>
          <%= render "form", f: f %>
          <div class="pt-1 text-center">
            <%= link_to 'Back', admin_items_path, class: "btn btn-warning px-5 mx-3 shadow-sm" %>
            <%= f.submit "Create", data: { confirm: 'Are you sure you want to create?' }, class: "btn btn-success px-5 mx-3 shadow-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>