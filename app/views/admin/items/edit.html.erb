<%= render "layouts/adnav" %>
<div class="main mt-4">
  <h1><b>Edit Item</b></h1>
  <%= render "shared/error", resource: @item %>
  <div class="card w-100 mt-1 ">
    <div class="card-body bg-secondary">
      <div class="container">
        <%= form_for @item, url: admin_item_path(@item), method: :patch do |f| %>
          <%= render "form", f: f %>
          <div class="pt-1 text-center">
            <%= link_to 'Back', admin_items_path, class: "btn btn-warning btn-lg px-5" %>
            <%= f.submit "Update", class: "btn btn-warning btn-lg px-5" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>