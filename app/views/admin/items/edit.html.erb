<%= render "layouts/adnav" %>
<div class="main mt-4">
  <h1><b>Edit Item</b></h1>
  <%= render "shared/error", resource: @item %>
  <div class="card w-100 mt-1 shadow border-light">
    <div class="card-body bg-light">
      <div class="container">
        <%= form_for @item, url: admin_item_path(@item), method: :patch do |f| %>
          <%= render "form", f: f %>
          <div class="pt-1 text-center">
            <%= link_to 'Back', admin_items_path, class: "btn btn-warning px-5 mx-3" %>
            <%= f.submit "Update", data: { confirm: 'Are you sure you want to update?' }, class: "btn btn-success px-5 mx-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>