<% if @offer.image? %>
  <div class="row mt-4">
    <div class="col">
      <div class="d-flex justify-content-center">
      <%= image_tag @offer.image.url, class: "img-thumbnail" %>
      </div>
      <div class="row mt-4">
        <div class="col">
          <div class="form-outline mb-3">
            <%= f.file_field :image, class: "form-control" %>
          </div>
        </div>
        <div class="form-outline mb-3">
          <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
        </div>
        <div class="form-outline mb-3">
          <%= f.select(:genre, Offer.genres.keys.map { |key| [key.humanize, key] }, { prompt: 'Genre' }, class: 'form-control form-select') %>
        </div>
        <div class="form-outline mb-3">
          <%= f.select(:status, Offer.statuses.keys.map { |key| [key.humanize, key] }, { prompt: 'Status' }, class: 'form-control form-select') %>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text shadow-sm " style="width: 80px">Amount</span>
          <%= f.text_field :amount, class: "form-control", placeholder: "Amount" %>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text mx-auto shadow-sm" style="width: 80px">Coin</span>
          <%= f.text_field :coin, class: "form-control", placeholder: "Coin" %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="row mt-4">
    <div class="col">
      <div class="form-outline mb-3">
        <%= f.file_field :image, class: "form-control" %>
      </div>
    </div>
    <div class="form-outline mb-3">
      <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>
    <div class="form-outline mb-3">
      <%= f.select(:genre, Offer.genres.keys.map { |key| [key.humanize, key] }, { prompt: 'Genre' }, class: 'form-control form-select') %>
    </div>
    <div class="form-outline mb-3">
      <%= f.select(:status, Offer.statuses.keys.map { |key| [key.humanize, key] }, { prompt: 'Status' }, class: 'form-control form-select') %>
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text shadow-sm " style="width: 80px">Amount</span>
      <%= f.text_field :amount, class: "form-control", placeholder: "Amount" %>
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text mx-auto shadow-sm" style="width: 80px">Coin</span>
      <%= f.text_field :coin, class: "form-control", placeholder: "Coin" %>
    </div>
  </div>
<% end %>
